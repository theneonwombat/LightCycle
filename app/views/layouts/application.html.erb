<!DOCTYPE html>
<html>
  <head>
    <title>LightCycle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon-16x16.png') %>
    <script type="text/javascript">
      window.googleAPIKey = "<%= Rails.application.credentials.google[:api_key] %>"
    </script>
    <meta property="og:title" content="LightCycle" />
    <meta property="og:image" content="<%= image_url('lightcycle_thumb.png') %>"/>
    <meta property="og:description"
      content="A full stack single-page app clone of Strava, allowing users to map and share their favorite bicycling routes" />
    <meta property="og:url">
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{Rails.application.credentials.google[:api_key]}" %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
